<% layout("/layouts/boilerplate.ejs") %>
<body>


<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for( list of allListings) { %>
    <a href="/listing/<%= list._id %>" class="cardAnchor">
    <div class="card" style="width: 20rem; height: 28rem;">
      <img src="<%= list.image.url %>" class="card-img-top" alt="listing
      image">

      <div class="card-body">
       <b> <p><%= list.title %></p> </b>
         <p class="card-text"><%= list.description %> </p> 
         <p class="card-text"> &#8377; <%= list.price.toLocaleString("en-IN") %> / night</p>
      </div>
    </div> 
    </a>
    <% } %> 
</div>